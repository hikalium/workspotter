<% include _header %>
<div class="container">
  <% if (msg.content) { %>
    <% if (msg.type == 'info') { %>
      <div class="alert alert-success">
        <%= msg.content %>
      </div>
    <% } else { %>
      <div class="alert alert-danger">
        <%= msg.content %>
      </div>
    <% } %>
  <% } %>
  <h2>応募者情報</h2>
  <% if (apply.length > 0) { %>
  <div class="p-1 mt-2" style="height: 300px; overflow-y: scroll">
    <table class="table table-striped table-hover info bg-light table-bordered m-0">
      <thead>
        <tr>
          <th>仕事ID</th>
          <th>仕事名</th>
          <th>応募者名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (var apply of applies) { %>
        <tr>
          <td><%= apply.jobId %></td>
          <td><%= recruitingJobs[apply.jobId].name %></td>
          <td><%= user[apply.userId].name %></td>
          <td><a href="/applicant?applyId=<%= apply.id %>">詳細</a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <% } else { %>
    <p>現在応募者はいません。</p>
  <% } %>
  <h2>求人情報</h2>
  <form method="get" action="/job_edit">
    <div class="insert_btn">
        <input type="hidden" name="userId" value=<%= userId %>></input>
        <input class="btn btn-primary" type="submit" value="求人作成"></input>
    </div>
  </form>
  <% if (recruitingJobs.length > 0) { %>
  <div class="p-1 mt-2" style="height: 300px; overflow-y: scroll">
    <table class="table table-striped table-hover info bg-light table-bordered m-0">
      <thead>
        <tr>
          <th>ID</th>
          <th>会社名</th>
          <th>概要</th>
        </tr>
      </thead>
      <% for(var job of recruitingJobs) { %>
        <tr>
          <th width="5%"><%= job.id %></th>
          <td width="40%"><%= job.name %></td>
          <td><%= job.description %></td>
        </tr>
      <% }; %>
    </table>
  </div>
  <% } else { %>
  <p>現在求人はしていません。</p>
  <% } %>
</div>
<% include _footer %>
